<InputProfile>
	<!-- The game context contains player movement (using WASD, controller pov (as buttons since libGdx version 1.10.0) and controller analog stick) -->
	<context name="game">
		<events>
			<KEY_DOWN />
			<TOUCH_DOWN />
			<CONTROLLER_BUTTON_DOWN />
			<CONTROLLER_AXIS_THRESHOLD_PASSED />
		</events>
		
		<states>
			<!-- movement input states -->
			<state name="up">
				<key code="W" />
				<controller player="1">
					<button code="11" />
					<axis code="1" threshold="-0.5" />
				</controller>
			</state>
			<state name="down">
				<key code="S" />
				<controller player="1">
					<button code="12" />
					<axis code="1" threshold="0.5" />
				</controller>
			</state>
			<state name="left">
				<key code="A" />
				<controller player="1">
					<button code="13" />
					<axis code="0" threshold="-0.5" />
				</controller>
			</state>
			<state name="right">
				<key code="D" />
				<controller player="1">
					<button code="14" />
					<axis code="0" threshold="0.5" />
				</controller>
			</state>
			
			<state name="sprint">
				<key code="L-Shift" />
				<controller player="1">
					<button code="7" />
				</controller>
			</state>
			
			<state name="special">
				<key code="F" />
				<controller player="1">
					<button code="10" />
				</controller>
			</state>
			
			<state name="jump">
				<key code="Space" />
				<controller player="1">
					<button code="9" />
				</controller>
			</state>
			
			<state name="attack">
				<key code="R-Ctrl" />
				<button code="Left" /><!-- left mouse button -->
				<controller player="1">
					<button code="0" />
					<axis code="5" threshold="0.7" /><!-- right shoulder axis -->
				</controller>
			</state>
			
			<state name="block">
				<key code="R-Shift" />
				<button code="Right" /><!-- right mouse button to block -->
				<controller>
					<button code="1" />
					<axis code="4" threshold="0.7" /><!-- left shoulder axis -->
				</controller>
			</state>
			
			<state name="interact">
				<key code="E" />
				<controller player="1">
					<button code="3" />
				</controller>
			</state>
		</states>
		
		<actions>
			<action name="interact">
				<key code="E" />
				<controller player="1">
					<button code="3" />
				</controller>
			</action>
			
			<action name="menu">
				<key code="Escape" />
				<controller>
					<button code="6" />
				</controller>
			</action>
			
			<action name="previousSpecialAction">
				<key code="R" />
				<!-- not available for controller because we need the key for jumping -->
			</action>
			
			<action name="nextSpecialAction">
				<key code="T" />
				<controller player="1">
					<button code="2" />
				</controller>
			</action>
			
			<!-- Direction keys as events (for sprinting) -->
			<action name="up_action">
				<key code="W" />
				<controller player="1">
					<button code="11" />
					<axis code="1" threshold="-0.5" />
				</controller>
			</action>
			<action name="down_action">
				<key code="S" />
				<controller player="1">
					<button code="12" />
					<axis code="1" threshold="0.5" />
				</controller>
			</action>
			<action name="left_action">
				<key code="A" />
				<controller player="1">
					<button code="13" />
					<axis code="0" threshold="-0.5" />
				</controller>
			</action>
			<action name="right_action">
				<key code="D" />
				<controller player="1">
					<button code="14" />
					<axis code="0" threshold="0.5" />
				</controller>
			</action>
			
			<!-- Block key as event (to abort blocking when endurance is out) -->
			<action name="block_action">
				<key code="R-Shift" />
				<button code="Right" /><!-- right mouse button to block -->
				<controller>
					<button code="1" />
					<axis code="4" threshold="0.7" /><!-- left shoulder axis -->
				</controller>
			</action>
		</actions>
		
		<controllerAxes>
			<controllerAxis name="camera_vertical_move_axis">
				<axis player="1" code="3" />
			</controllerAxis>
			<controllerAxis name="camera_horizontal_move_axis">
				<axis player="1" code="2" />
			</controllerAxis>
		</controllerAxes>
	</context>
	
	<!-- The context for the main menu contains movement (for inputs), selecting an option, moving back (all modeled as actions) -->
	<context name="mainMenu">
		<events>
			<KEY_DOWN />
			<TOUCH_DOWN />
			<CONTROLLER_BUTTON_DOWN />
			<CONTROLLER_AXIS_THRESHOLD_PASSED />
		</events>
		<actions>
			<!-- input movement using WASD, controller pov (as buttons since libGdx version 1.10.0) or controller analog stick 
			    (should usually be the left analog stick). Works on all attached controllers -->
			<action name="up">
				<key code="W" />
				<key code="Up" />
				<controller>
					<button code="11" />
					<axis code="1" threshold="-0.5" />
				</controller>
			</action>
			<action name="down">
				<key code="S" />
				<key code="Down" />
				<controller>
					<button code="12" />
					<axis code="1" threshold="0.5" />
				</controller>
			</action>
			<action name="left">
				<key code="A" />
				<key code="Left" />
				<controller>
					<button code="13" />
					<axis code="0" threshold="-0.5" />
				</controller>
			</action>
			<action name="right">
				<key code="D" />
				<key code="Right" />
				<controller>
					<button code="14" />
					<axis code="0" threshold="0.5" />
				</controller>
			</action>

			<action name="back">
				<key code="Escape" />
				<controller>
					<button code="1" />
				</controller>
			</action>

			<action name="select">
				<key code="Enter" />
				<controller>
					<button code="0" />
				</controller>
			</action>
		</actions>
	</context>
	
