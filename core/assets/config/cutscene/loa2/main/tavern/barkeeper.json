{
	id: loa2_main_tavern_barkeeper_cutscene,
	controlledActions: {
		barkeeper_greeting: {
			type: SHOW_ON_SCREEN_TEXT,
			
			executionParameters: {
				displayTextHeader: "Mjodwitnir",
				displayText: "Hey Thorin,\nYou look ... even worse than usual.\n\nHave some mead and something to eat. That solves all problems. ",
				colorHeader: #deba2c,
				showNextPageIcon: true,
			}
			
			startsWithCutscene: true,
			waitForEventToFinish: true,
			
			executes: [
				set_global_variable,
			],
		},
		
		// sets a global value that tells that Thorin has seen the barkeeper at least once (needed to continue the game)
		set_global_variable: {
            type: EVENT,
			
			event: {
				eventType: SET_GLOBAL_CONDITION_VALUE,
				stringValue: "{key: loa2_main_tavern__spoken_to_mjodwitnir, value: true}",
			},
			
			executes: [
                thorin_answer,
			],
		},
		
		thorin_answer: {
			type: PLAYER_CHOICE,
			
			waitForEventToFinish: true,
			
			choice: {
				header: "Thorin",
				options: [
					"Thanks ...  I guess.",
					"I don't need anything.",
				],
			},
			choiceOptionExecutions: [
				thanks_i_guess,
				end,
			],
		},
		
		thanks_i_guess: {
			type: EVENT,
			
			event: {
				eventType: GIVE_ITEM_TO_PLAYER,
				stringValue: mana_big,
			},
			
			executes: [
				wait_between_mead_and_food,
			]
		},
		wait_between_mead_and_food: {
			type: WAIT,
			executionDurationInSeconds: 3f,
			waitForEventToFinish: true,
			
			executes: [
				give_food,
			]
		},
		give_food: {
			type: EVENT,
			
			event: {
				eventType: GIVE_ITEM_TO_PLAYER,
				stringValue: health_big,
			},
			
			executes: [
				wait_after_food,
			]
		},
		wait_after_food: {
			type: WAIT,
			executionDurationInSeconds: 2f,
			waitForEventToFinish: true,
			
			executes: [
				thorin_thanks,
			]
		},
		thorin_thanks: {
            type: SHOW_ON_SCREEN_TEXT,
            
            executionParameters: {
                displayTextHeader: "Thorin",
                displayText: "Thanks. I feel better now. ",
			}
            
            waitForEventToFinish: true,
            
            executes: [
                end,
			],
		},
		
		end: {
			type: WAIT,
			executionDelayInSeconds: 0f,
		}
	}
}