			},
			
			executes: [
				set_global_condition_value__mini_boss_appeared,
			]
		}
		
		set_global_condition_value__mini_boss_appeared: {
			type: EVENT,
			
            executionDelayInSeconds: 2f,
			
			event: {
				eventType: SET_GLOBAL_CONDITION_VALUE,
				stringValue: "{key: loa2_l1__mini_boss_appeared, value: true}",
			},
			
			executes: [
                end,
			]
		},
		
		end: {
			type: WAIT,
			executionDelayInSeconds: 0f,
		}
