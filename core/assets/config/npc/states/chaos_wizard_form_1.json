[
	{
		id: idle,
		animation: elite_mage_idle,
		endsWithAnimation: true,
		followingState: idle,
		interruptingStates: [
			move, move_with_animation, cast_loop_with_effect
		]
	},
	{
		id: move,
		animation: elite_mage_idle, // no movement, so the "looking arround for the princess" animation works
		endsWithAnimation: true,
		followingState: idle,
		interruptingStates: [
			idle, move_with_animation
		]
	},
	
	{
		id: move_with_animation,
		animation: elite_mage_move,
		endsWithAnimation: true,
		followingState: move_with_animation,
		interruptingStates: [
			move_with_animation, idle // the move state must not interrupt this one, so the movement uses this animation without getting interrupted
		]
	},
	
	{
		id: cast_loop_with_effect,
		animation: elite_mage_cast_loop_with_effect,
		endsWithAnimation: true,
		followingState: cast_loop_with_effect, // has to be stopped manually (in the cutscene)
		interruptingStates: [
			idle
		]
	},
]